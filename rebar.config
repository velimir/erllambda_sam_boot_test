{erl_opts, [debug_info]}.

{deps,
 [
  erllambda
 ]}.

%% Build a release from this project
{relx,
 [
  {release, { erllambda_sam_boot_test, "1.0.0" }, [erllambda_sam_boot_test, erllambda]},

  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},

  %% {dev_mode, true},
  {include_src, false},

  {extended_start_script, true}]
}.

{plugins,
 [
  covertool,
  {rebar3_erllambda,
   {git, "git@github.com:velimir/rebar3_erllambda.git",
    {branch, "code-loading-mode"}}}
 ]}.

%% Profiles
{profiles,
 [
  {test,
   [
    {erl_opts, [export_all]},
    {deps, [meck]}
   ]},
  {prod,
   [
    {relx, 
     [
      {include_erts, true},
      {system_libs, true},
      {dev_mode, false}
     ]}
   ]}
 ]}.

